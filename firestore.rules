rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to all documents
    // Write access requires authentication (expires Jan 26, 2026)
    match /{document=**} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.time < timestamp.date(2026, 1, 26);
    }
    
    // User profiles - only users can modify their own data
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Leads - users can only see and modify their own leads
    match /leads/{leadId} {
      allow read: if request.auth != null && 
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null &&
                               resource.data.userId == request.auth.uid;
    }
    
    // Searches - users can only see their own searches
    match /searches/{searchId} {
      allow read: if request.auth != null &&
                     resource.data.userId == request.auth.uid;
      allow create: if request.auth != null &&
                       request.resource.data.userId == request.auth.uid;
    }
    
    // Blog posts - public read, admin write
    match /blog/{postId} {
      allow read: if true;
      allow write: if request.auth != null &&
                      get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
  }
}
